---
interface Props {
  id?: string;
  title: string;
  class?: string;
}

const { id, title, class: className } = Astro.props;
---

<section id={id} class={`py-20 px-6 ${className || ''}`}>
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl sm:text-4xl font-bold mb-12 text-foreground">
      {title}
    </h2>
    <slot />
  </div>
</section>
