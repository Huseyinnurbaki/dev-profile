---
import { siteConfig } from '../config';
---

<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-sm bg-background/80 border-b border-border">
  <div class="max-w-4xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a
        href="/"
        class="text-lg font-semibold text-foreground hover:text-accent transition-colors"
      >
        {siteConfig.name}
      </a>

      <nav class="flex items-center gap-6">
        <a
          href="#about"
          class="text-sm text-muted hover:text-foreground transition-colors hidden sm:inline-block"
        >
          About
        </a>
        <a
          href="#experience"
          class="text-sm text-muted hover:text-foreground transition-colors hidden sm:inline-block"
        >
          Experience
        </a>
        <!-- <a
          href="#projects"
          class="text-sm text-muted hover:text-foreground transition-colors hidden sm:inline-block"
        >
          Projects
        </a> -->

        <button
          id="theme-toggle"
          aria-label="Toggle theme"
          class="p-2 rounded-lg hover:bg-border/50 transition-colors"
        >
          <svg
            class="w-5 h-5 dark:hidden"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
            ></path>
          </svg>
          <svg
            class="w-5 h-5 hidden dark:block"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
            ></path>
          </svg>
        </button>
      </nav>
    </div>
  </div>
</header>
