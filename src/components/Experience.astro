---
import { siteConfig } from '../config';
import Section from './Section.astro';
---

<Section id="experience" title="Experience">
  <div class="space-y-12">
    {
      siteConfig.experience.map((job, index) => (
        <div class="relative pl-8 border-l-2 border-border">
          <div
            class="absolute left-0 top-0 w-4 h-4 -ml-[9px] rounded-full bg-accent"
            aria-hidden="true"
          />
          <div class="space-y-3">
            <div>
              <h3 class="text-xl font-semibold text-foreground">{job.title}</h3>
              <div class="flex flex-col sm:flex-row sm:items-center gap-2 mt-1">
                <p class="text-lg text-muted">{job.company}</p>
                <span class="hidden sm:inline text-muted">Â·</span>
                <p class="text-sm text-muted">{job.period}</p>
              </div>
            </div>
            <ul class="space-y-2">
              {job.highlights.map((highlight) => (
                <li class="text-muted leading-relaxed">{highlight}</li>
              ))}
            </ul>
          </div>
        </div>
      ))
    }
  </div>
</Section>
